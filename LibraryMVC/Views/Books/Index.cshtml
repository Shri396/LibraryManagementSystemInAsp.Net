@model List<Book>
@{
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>List of Books</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css"> <!-- Your custom CSS file -->
</head>

<body>
    <h2 class="text-center mb-5">List of Books</h2>

    <div class="row mb-5">
        <div class="col">
            <a class="btn btn-primary" asp-controller="Books" asp-action="Create">New Book</a>
        </div>
        <div class="col">
            <!-- You can add additional content here if needed -->
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Author</th>
                <th>Genre</th>
                <th>Price</th>
                <th>Description</th>
                <th>Image</th>
                <th>Created At</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Id</td>
                    <td>@book.Name</td>
                    <td>@book.Author</td>
                    <td>@book.Genre</td>
                    <td>@String.Format("{0:C}", book.Price)</td> <!-- Formats price as currency -->
                    <td>@book.Description</td>
                    <td>
                        <img src="/Books/@book.ImageFileName" width="100" alt="Book Image" />
                    </td>
                    <td>@book.CreatedAt.ToString("MM/dd/yyyy")</td>
                    <td style="white-space: nowrap;">
                        <a class="btn btn-primary btn-sm" asp-controller="Books" asp-action="Edit" asp-route-id="@book.Id">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a class="btn btn-danger btn-sm" asp-controller="Books" asp-action="Delete" asp-route-id="@book.Id" onclick="return confirm('Are you sure?')">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
